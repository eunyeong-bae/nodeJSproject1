    <%- include('nav.ejs') %>

    <div class="white-bg">
        <!-- % : html 사이에 js 문법 쓸 때 -->
        <% for(let i=0; i<result.length; i++){ %>
            <div class="list-box">
                
                <h4>
                   <a href="/chat/detail/<%= result[i]._id %>">채팅방 <%= result[i]._id %></a>
                </h4>
                <p>채팅방설명</p>
            </div>

        <% } %>
    </div>

</body>
</html> 